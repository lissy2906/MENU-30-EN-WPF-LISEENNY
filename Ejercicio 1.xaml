<UserControl x:Class="EjerciciosWPFLissy.Ejercicio1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="550">
    <StackPanel Margin="20" >
        <TextBlock Text="Ejercicio 1: Salario con horas extra" FontWeight="Bold" FontSize="16"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Width="150" VerticalAlignment="Center">Horas trabajadas:</TextBlock>
            <TextBox x:Name="txtHoras" Width="200" BorderBrush="#FF4369DC" Foreground="#FFC53535" SelectionTextBrush="#FF3C2020"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Width="150" VerticalAlignment="Center">Tarifa por hora:</TextBlock>
            <TextBox x:Name="txtTarifa" Width="200"/>
        </StackPanel>

        <Button Content="Calcular" Width="100" Margin="0,20,0,0" Click="BtnCalcular_Click"/>

        <TextBlock x:Name="txtResultado" Margin="0,20,0,0" FontWeight="SemiBold" FontSize="14"/>
    </StackPanel>
</UserControl>

