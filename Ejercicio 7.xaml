<UserControl x:Class="EjerciciosWPFLissy.Ejercicio7"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Ejercicio 7: Calcular el doble" FontWeight="Bold" FontSize="16"/>

        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Width="150">Número:</TextBlock>
            <TextBox x:Name="txtNumero" Width="200"/>
        </StackPanel>

        <Button Content="Calcular" Width="100" Margin="0,10" Click="BtnCalcular_Click"/>
        <TextBlock x:Name="txtResultado" FontWeight="SemiBold" Margin="0,10"/>
    </StackPanel>
</UserControl>

