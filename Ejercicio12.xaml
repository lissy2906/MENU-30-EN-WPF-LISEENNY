<UserControl x:Class="EjerciciosWPFLissy.Ejercicio12"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="320" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Ejercicio 12: Tabla de multiplicar" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtNumero" Margin="0,10"/>
        <Button Content="Generar tabla" Width="150" Click="BtnGenerar_Click"/>
        <TextBox x:Name="txtTabla" Margin="0,10" Height="180" IsReadOnly="True" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
