<UserControl x:Class="EjerciciosWPFLissy.Ejercicio14"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Ejercicio 14: Celsius a Fahrenheit" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtCelsius" Margin="0,10"/>
        <Button Content="Convertir" Width="100" Click="BtnConvertir_Click"/>
        <TextBlock x:Name="txtResultado" Margin="0,15,0,0" FontWeight="SemiBold"/>
    </StackPanel>
</UserControl>
