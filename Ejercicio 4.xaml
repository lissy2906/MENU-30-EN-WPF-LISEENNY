<UserControl x:Class="EjerciciosWPFLissy.Ejercicio4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="397" Width="731">
    <StackPanel Margin="20,20,10,0">
        <TextBlock Text="Ejercicio 4: Determinar el mayor de dos números" FontWeight="Bold" FontSize="16" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Width="120">Primer número:</TextBlock>
            <TextBox x:Name="txtNum1" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Width="120">Segundo número:</TextBlock>
            <TextBox x:Name="txtNum2" Width="200"/>
        </StackPanel>

        <Button Content="Comparar" Width="100" Margin="0,15,0,0" Click="BtnComparar_Click"/>
        <TextBlock x:Name="txtResultado" Margin="0,20,0,0" FontWeight="SemiBold" FontSize="14"/>
    </StackPanel>
</UserControl>

