<UserControl x:Class="EjerciciosWPFLissy.Ejercicio30"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="250" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Ejercicio 30: Nota del estudiante" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtNombre" Margin="0,5"/>
        <TextBox x:Name="txtNota" Margin="0,5"/>
        <Button Content="Evaluar" Click="BtnEvaluar_Click"/>
        <TextBlock x:Name="txtResultado" Margin="10,10,0,0"/>
    </StackPanel>
</UserControl>

