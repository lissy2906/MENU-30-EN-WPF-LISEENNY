<UserControl x:Class="EjerciciosWPFLissy.Ejercicio16"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="230" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Ejercicio 16: Resta de dos números" FontSize="16" FontWeight="Bold"/>

        <TextBox x:Name="txtA" Margin="0,10"/>
        <TextBox x:Name="txtB" Margin="0,5"/>
        <Button Content="Restar" Margin="0,10" Width="100" Click="BtnRestar_Click"/>
        <TextBlock x:Name="txtResultado" Margin="10,10,0,0" FontWeight="SemiBold"/>
    </StackPanel>
</UserControl>

