<UserControl x:Class="EjerciciosWPFLissy.Ejercicio3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="220" Width="550">
    <StackPanel Margin="20">
        <TextBlock Text="Ejercicio 3: Descuento por monto" FontWeight="Bold" FontSize="16"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Width="150" VerticalAlignment="Center">Monto:</TextBlock>
            <TextBox x:Name="txtMonto" Width="200"/>
        </StackPanel>

        <Button Content="Calcular" Width="100" Margin="0,20,0,0" Click="BtnCalcular_Click"/>

        <TextBlock x:Name="txtResultado" Margin="0,20,0,0" FontWeight="SemiBold" FontSize="14"/>
    </StackPanel>
</UserControl>
